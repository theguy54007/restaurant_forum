<div class="container">

   <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
    </div>
    <div class="col-md-4">
      <% for id in 0..9 %>
        <% if image_path(restaurant.image).include?('/'+id.to_s+'.jpg') %>
          <%= image_tag('/seed_img/'+id.to_s+'.jpg', class: "img-responsive center-block") %>
        <% end %>
      <%end%>
          
          <br>
          <div class="well">
            <ul class="list-unstyled">
              <li><strong><%= @restaurant.category.name %></strong></li>
              <li><strong>Opening Hour:</strong> <%= @restaurant.opening_hours %></li>
              <li><strong>Tel:</strong> <%= @restaurant.tel %></li>
              <li><strong>Address:</strong> <%= @restaurant.address %></li>
            </ul>
          </div>
        </div>
        <div class="col-md-8">
          <%= simple_format @restaurant.description %>
        </div>
        <div class="clearfix"></div>
        <hr>
    </div>
    <%= link_to 'Back to index', admin_restaurants_path, class: "btn btn-info" %>
    <%= link_to 'Edit', edit_admin_restaurant_path, class: "btn btn-success" %>
    <%= link_to 'Delete', admin_restaurant_path, class: "btn btn-danger", method: :delete, data: {confirm:"Are you sure?"} %>
  </div>
