<div class="form container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>Edit Profile</h3>

      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :intro, "Introduction" %><br>
          <%= f.text_field :intro, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update", class: "btn btn-primary" %>
          <%= link_to 'Back', user_path(@user), class: "btn btn-info" %>
        </div>
        <div class="form-group">
          <%= f.label :avatar, "Photo" %>
          <% for id in 0..20 %>
            <% if image_path(@user.avatar).include?('/'+ 'user'+id.to_s+'.jpg') %>
              <%= image_tag('/avatar/'+'user'+id.to_s+'.jpg', width: '300px') %>
            <% end %>
          <%end%>

          <%= f.file_field :avatar, class: "form-control" %>
        </div>
        <% end %>
      </div>
  </div>
</div>
