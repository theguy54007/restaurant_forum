<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="page header">
        <h1>My friend <small><%= current_user.all_friend.count%> 位好友</small></h1>
      </div>
      <%current_user.all_friend.each do |friend|%>
      <div class="ranking-item">
        <div class="col-sm-6 col-md-4">
          <% link_to user_path(friend) do%>
          <% if friend.avatar?%>
              <%= image_tag friend.avatar, class: "img-responsive img-rounded"%>
          <% else %>
              <%= image_tag "http://fakeimg.pl/270x180/BBBBBB/", class: "img-responsive img-rounded"%>
          <% end %>
          <%end%>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title"><%= friend.name %></div>
          </div>
          <div class="panel-body">
            <p><%= truncate(friend.intro, length: 200)%></p>
            <h3>已評論餐廳</h3>
            <ul class="list-unstyle list-inline">
              <% friend.comments.each do |comment| %>
              <li><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant)%></li>
              <% end %>
            </ul>
            <hr>

            <div>
              <%= link_to "Show", user_path(friend), class:"btn btn-primary"%>
              <%= render partial:"shared/friend", locals:{user: friend}%>
            </div>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
    <%end%>
    </div>
  </div>
</div>
